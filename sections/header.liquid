<style>
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

.header__icon  {
    color: white; /* Change this to your desired color code */
}


  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }
.split-navigation {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #82876d00;
    margin-bottom:-150px;
}
.split-navigation:hover{
  background-color: #000;
}

.left-menu, .right-menu {
  display: flex;
  gap: 20px; /* Adjust as needed */
}
header {
    padding: 30px 0;  /* Increase vertical padding for a more centered look */
    text-align: center;  /* Ensure content is centered horizontally */
}

/* Logo styling */
.center-logo img {
    vertical-align: middle;  /* vertically center with respect to the menu items */
}

/* Menu links styling */
.left-menu a, .right-menu a {
    padding: 0 15px;  /* horizontal padding for better spacing */
    text-decoration: none;  /* remove underline */
    color: #fff;  /* dark color for the text */
    /* font-family: 'Garamond SB Roman', serif;  */
    font-family: Cormorant Infant,serif;
    text-transform: uppercase; 
    transition: color 0.3s;  /* smooth transition for hover effect */
    font-size:16px;
}

/* Hover effect for menu links */
.left-menu a:hover, .right-menu a:hover {
    color: #ccc;  /* change to a different color on hover, for example, blue */
}
  

/* Menu links styling */
nav a {
    padding: 10px 15px;  /* Vertical and horizontal padding for menu items */
    text-decoration: none;  /* Remove underline */
    color: #333;  /* Text color */
    transition: color 0.3s;  /* Smooth transition for hover effect */
}

/* Logo styling (assuming there's a logo class) */
.logo {
    display: inline-block; 
    vertical-align: middle;  /* Vertically align the logo with the menu items */
}
  .center-logo {
    padding: 10px 60px;
}
  /*  New code  */
    .menu-toggle {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  /* Hamburger menu icon styles */
  .menu-toggle svg {
    width: 30px;
    height: 40px;
  }
  
  .menu-toggle.open {
    display: none;
  }

  /* Mobile-specific styles */
  @media screen and (max-width: 767px) {
    .menu-toggle {
      display: flex;
      align-items: center;
      margin-right: 20px; /* Adjust as needed */
    }

    .left-menu, .right-menu {
      display: none; /* Hide menu items by default on mobile */
    }

    .split-navigation.open-menu .left-menu, 
    .split-navigation.open-menu .right-menu {
      display: flex; /* Show menu items when menu is open */
    }
  }
</style>

