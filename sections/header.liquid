<div class="split-navigation">
  <div class="menu-toggle" onclick="toggleMenu()">
    <div class="menu-icon" id="menu-icon">
      {% render 'icon-hamburger' %}
    </div>
    <div class="close-icon" id="close-icon" style="display: none;">
      {% render 'icon-close' %}
    </div>
  </div>
  
  <div class="left-menu">
    {% for link in linklists['header-left'].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </div>
  
  <div class="center-logo">
    <a href="{{ shop.url }}">
      <img src="https://cdn.shopify.com/s/files/1/1488/8784/files/Standard_wax_logo_HD_white.png?v=1699526298" alt="{{ shop.name }}" class="site-logo" width="270" height="35">
    </a>
  </div>
  
  <div class="right-menu">
    {% for link in linklists['right_menu'].links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </div>
  
  <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
    {%- liquid
      if cart == empty
        render 'icon-cart-empty'
      else
        render 'icon-cart'
      endif
    -%}
    <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
    {%- if cart != empty -%}
      <div class="cart-count-bubble">
        {%- if cart.item_count < 100 -%}
          <span aria-hidden="true">{{ cart.item_count }}</span>
        {%- endif -%}
        <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
      </div>
    {%- endif -%}
  </a>
</div>

<script>
  function toggleMenu() {
    var navigation = document.querySelector('.split-navigation');
    var menuIcon = document.getElementById('menu-icon');
    var closeIcon = document.getElementById('close-icon');
    
    navigation.classList.toggle('open-menu');
    menuIcon.style.display = menuIcon.style.display === 'none' ? 'flex' : 'none';
    closeIcon.style.display = closeIcon.style.display === 'none' ? 'flex' : 'none';
  }
</script>

